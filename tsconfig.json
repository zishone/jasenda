{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "src/*": [
          "./src/*"
        ]
      },
      "declaration": true,
      "strict": true,
      "typeRoots": ["./src/types"],
      "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}
